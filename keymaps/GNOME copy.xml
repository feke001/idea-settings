<keymap version="1" name="GNOME copy" parent="Default for GNOME">
  <action id="GotoDeclaration">
    <mouse-shortcut keystroke="control button1" />
  </action>
  <action id="GotoTypeDeclaration">
    <mouse-shortcut keystroke="shift control button1" />
  </action>
  <action id="Scala.ShowImplicits">
    <keyboard-shortcut first-keystroke="shift ctrl alt equals" />
    <keyboard-shortcut first-keystroke="shift ctrl alt add" />
  </action>
  <action id="ShowBookmarks">
    <keyboard-shortcut first-keystroke="shift f11" />
    <keyboard-shortcut first-keystroke="shift ctrl b" />
  </action>
  <action id="ToggleBookmarkWithMnemonic">
    <keyboard-shortcut first-keystroke="ctrl f11" />
    <keyboard-shortcut first-keystroke="ctrl b" />
  </action>
</keymap>